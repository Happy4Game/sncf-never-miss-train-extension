{
  "manifest_version": 3,
  "name": "Never miss you train!",
  "version": "1.0.0",
  "description": "Alert you when your train is late or cancelled",
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "action": {
    "default_title": "Never miss you train",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "service_worker": "./popup/service-worker.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*.sncf-voyageurs.com/",
    "https://www.garesetconnexions.sncf/schedule-table/Departures/*"
  ],
  "permissions": ["scripting"]
}
